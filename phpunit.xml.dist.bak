<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    bootstrap="vendor/autoload.php"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    verbose="true"
>
    <testsuites>
        <testsuite name="Coole Test Suite">
            <directory suffix="Test.php">./src/console/tests</directory>
            <directory suffix="Test.php">./src/database/tests</directory>
            <directory suffix="Test.php">./src/error-handler/tests</directory>
            <directory suffix="Test.php">./src/event-dispatcher/tests</directory>
            <directory suffix="Test.php">./src/foundation/tests</directory>
            <directory suffix="Test.php">./src/http-kernel/tests</directory>
            <directory suffix="Test.php">./src/logger/tests</directory>
            <directory suffix="Test.php">./src/routing/tests</directory>
            <directory suffix="Test.php">./src/view/tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">./src/console/src</directory>
            <directory suffix=".php">./src/db/src</directory>
            <directory suffix=".php">./src/error-handler/src</directory>
            <directory suffix=".php">./src/foundation/src</directory>
            <directory suffix=".php">./src/http-kernel/src</directory>
            <directory suffix=".php">./src/routing/src</directory>
            <directory suffix=".php">./src/view/src</directory>
            <exclude>
                <directory>src/database/tests/</directory>
                <directory>src/error-handler/tests/</directory>
                <directory>src/event-dispatcher/tests/</directory>
                <directory>src/foundation/tests/</directory>
                <directory>src/http-kernel/tests/</directory>
                <directory>src/logger/tests/</directory>
                <directory>src/routing/tests/</directory>
                <directory>src/view/tests/</directory>
            </exclude>
        </whitelist>
    </filter>
    <php>
        <ini name="intl.default_locale" value="C.UTF-8" />
        <ini name="memory_limit" value="2048M" />
        <!--
        <env name="REDIS_HOST" value="127.0.0.1" />
        <env name="REDIS_PORT" value="6379" />
        -->
    </php>
    <listeners>
        <listener class="JohnKary\PHPUnit\Listener\SpeedTrapListener">
            <arguments>
                <array>
                    <element key="slowThreshold">
                        <integer>500</integer>
                    </element>
                    <element key="reportLength">
                        <integer>10</integer>
                    </element>
                    <element key="stopOnSlow">
                        <boolean>false</boolean>
                    </element>
                </array>
            </arguments>
        </listener>
    </listeners>
</phpunit>